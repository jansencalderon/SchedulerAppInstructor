<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="ph.edu.tip.schedulerappinstructor.util.DateTimeUtils" />

        <import type="ph.edu.tip.schedulerappinstructor.util.TagsManipulator" />

        <variable
            name="view"
            type="ph.edu.tip.schedulerappinstructor.ui.events.EventsView" />

        <variable
            name="instructor"
            type="ph.edu.tip.schedulerappinstructor.model.data.Admin" />

        <variable
            name="contentVisible"
            type="boolean" />

    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/eventCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">

            <ImageView
                android:layout_weight="25"
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"
                android:src="@drawable/sample" />

            <LinearLayout
                android:layout_weight="75"
                android:layout_width="0dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Liza Soberano"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Manila City"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="21 years old"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="09238129389"
                    android:textSize="12sp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>